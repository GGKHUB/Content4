{
  "name": "car-enthusiasts-social",
  "version": "1.0.0",
  "description": "A social media application for automobile enthusiasts",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && ng serve",
    "build": "cd client && ng build --configuration production",
    "build:dev": "cd client && ng build",
    "install-all": "npm install && cd client && npm install",
    "init-db": "node server/scripts/initDatabase.js",
    "start": "node server/index.js",
    "start:pm2": "pm2 start ecosystem.config.js --env production",
    "stop:pm2": "pm2 stop car-enthusiasts-app",
    "restart:pm2": "pm2 restart car-enthusiasts-app"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.7",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "nodemon": "^3.0.1",
    "pm2": "^5.3.0"
  },
  "keywords": [
    "social-media",
    "automobile",
    "cars",
    "enthusiasts"
  ],
  "author": "AUTOGRAPHY Team",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
