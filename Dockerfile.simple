# Ultra-simple Dockerfile - no complex dependencies
FROM node:18-alpine

WORKDIR /app

# Copy everything
COPY . .

# Install and build in one step
RUN npm install && \
    cd client && \
    npm install && \
    npm run build && \
    cd .. && \
    mkdir -p server/uploads

EXPOSE 5000

ENV NODE_ENV=production
ENV PORT=5000

CMD ["node", "server/index.js"]
